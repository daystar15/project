<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.example.demo.user.dao.UserDAO">

	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.example.demo.user.dto.UserDTO">
 		SELECT
 			 `user_id`
			, `user_pwd`
			, `user_name`
			, `user_phone`
			, `user_email`
			, `user_address`
			, `crt_date`
 		FROM
 			`user`
 		WHERE
 			`user_id` = #{user_id}
 			AND
 			`user_pwd` = #{user_pwd}
 	</select>
	
</mapper>